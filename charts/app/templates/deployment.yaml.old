{{- $secretVolumeMount := (include "volumes.secretVolumeMounts" .) }}
{{- $configmapVolumeMount := (include "volumes.configmapVolumeMounts" .) }}
{{- $volumeMounts := .Values.volumeMounts }}
{{- $persistence := .Values.persistence }}
{{- $env := .Values.env }}
{{- $secrets := .Values.secrets }}
{{- $configs := .Values.configs }}
{{- $fullname := (include "common.names.fullname" .) -}}
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "common.names.name" . }}
  annotations:
    {{- if .Values.annotations }}
      {{-   toYaml .Values.annotations | nindent 8 }}
      {{- end }}
  labels:
    {{- include "common.labels.standard" . | nindent 4 }}
spec:
{{- if not .Values.autoscaling.enabled }}
  replicas: {{ .Values.replicaCount }}
{{- end }}
  selector:
    matchLabels:
      {{- include "common.labels.selector" . | nindent 6 }}
  template:
    metadata:
      annotations:
        {{- if .Values.podAnnotations }}
        {{-   toYaml .Values.podAnnotations | nindent 8 }}
        {{- end }}
        {{- if .Values.metrics.enabled }}
        prometheus.io/path: {{ .Values.metrics.path }}
        prometheus.io/port: {{ .Values.metrics.port | quote }}
        prometheus.io/scrape: "{{ .Values.metrics.enabled }}"
        {{- end }}
        checksum/secret: {{ include (print $.Template.BasePath "/secret.yaml") . | sha256sum }}
        checksum/configmap: {{ include (print $.Template.BasePath "/configmap.yaml") . | sha256sum }}
      labels:
        {{- include "common.labels.selector" . | nindent 8 }}
        createdfor: strada
    spec:
      {{- if .Values.liquibase.enabled }}
      initContainers:
        {{- include (print $.Template.BasePath "/liquibase/_liquibase_spec.yaml") . | nindent 8 }}
      {{- end }}
      containers:
        - name: {{ .Chart.Name }}
          image: {{ include "common.image" . }}
          imagePullPolicy: {{ .Values.image.pullPolicy }}
          {{- if .Values.containerCommand }}
          command:
          {{- toYaml .Values.containerCommand | nindent 12 }}
          {{- end }}
          {{- if .Values.containerArgs }}
          args:
          {{- toYaml .Values.containerArgs | nindent 12 }}
          {{- end }}
          {{- if (coalesce $persistence $volumeMounts $secretVolumeMount $configmapVolumeMount) }}
          volumeMounts:
          {{- if $configmapVolumeMount -}}
          {{- $configmapVolumeMount | nindent 12 }}
          {{- end }}
          {{- if $secretVolumeMount -}}
          {{- $secretVolumeMount | nindent 12 }}
          {{- end }}
          {{- if $volumeMounts }}
          {{- toYaml $volumeMounts | nindent 12 }}
          {{- end }}
          {{- if $persistence }}
          {{- range $persistence }}
            - name: {{ .name }}
              mountPath: {{ .path }}
          {{- end }}
          {{- end }}
          {{- end }}
          env:
          {{- if (coalesce $env $secrets $configs) -}}
          {{- if .Values.env -}}
          {{- tpl .Values.env . | nindent 12 }}
          {{- end }}
          {{- if .Values.secrets }}
            {{- range .Values.secrets }}
            {{- if ne (coalesce .kind "env" ) "volume" }}
            - name: {{ .name }}
              valueFrom:
                secretKeyRef:
                  key: {{ .key }}
                  name: {{ $fullname }}-app
            {{- else }}
            - name: {{ .name }}
              value: {{ .path }}/{{ .key }}
            {{- end }}
            {{- end }}
          {{- end }}
          {{- if $configs }}
            {{- range $configs }}
            - name: {{ .name }}
              value: {{ .path }}/{{ .key }}
            {{- end }}
          {{- end }}
          {{- end }}
          ports:
            - name: {{ .Chart.Name }}
              containerPort: {{ .Values.service.internalPort }}
              protocol: TCP
            {{- if and .Values.metrics.enabled ( ne .Values.metrics.port .Values.service.internalPort ) }}
            - containerPort: {{ .Values.metrics.port }}
              name: metrics
              protocol: TCP
            {{- end }}
            {{- if .Values.extraContainerPort }}
            {{- range .Values.extraContainerPort }}
            - containerPort: {{ .port }}
              name: {{ .name }}
              protocol: {{ default "TCP" .protocol }}
              {{- if .hostPort }}
              hostPort: {{ .hostPort }}
              {{- end }}
            {{- end }}
            {{- end }}
          resources:
            {{- toYaml .Values.resources | nindent 12 }}
      {{- with .Values.nodeSelector }}
      nodeSelector:
        {{- toYaml . | nindent 8 }}
      {{- end }}
      {{- with .Values.affinity }}
      affinity:
        {{- toYaml . | nindent 8 }}
      {{- end }}
      {{- with .Values.tolerations }}
      tolerations:
        {{- toYaml . | nindent 8 }}
      {{- end }}
      {{- if (coalesce $persistence .Values.volumes (include "volumes.secretVolumes" .) (include "volumes.configmapVolumes" .)) }}
      volumes:
      {{-   if .Values.volumes }}
      {{-     toYaml .Values.volumes | nindent 8 }}
      {{-   end }}
      {{-   if (include "volumes.secretVolumes" .) -}}
      {{-     include "volumes.secretVolumes" . | nindent 8 }}
      {{-   end }}
      {{-   if (include "volumes.configmapVolumes" .) -}}
      {{-     include "volumes.configmapVolumes" . | nindent 8 }}
      {{-   end }}
      {{-   if $persistence }}
      {{-     range $persistence }}
        - name: {{ .name }}
          persistentVolumeClaim:
            claimName: {{ printf "%s-%s" $fullname .name | quote }}
      {{-     end }}
      {{-   end }}
      {{- end }}
